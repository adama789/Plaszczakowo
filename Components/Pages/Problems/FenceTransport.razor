@page "/fence_transport"
@using Problem.FenceTransport;
@inherits ProblemComponentBase<FenceTransportInputData, FenceTransportOutput, Drawer.GraphDrawer.GraphData>

<div class="map-background">
    @if (Executor is not null)
    {
        <GraphVisualizer Snapshots="Executor.GetSnapshots()"/>
        <ReturnButton/>
        <OutputButton ButtonPosition="HangingButton.HangingButtonPosition.Right" ButtonProblem="OutputButton.OutputButtonProblem.FenceTransport"/>
    }
</div>


@code {

    protected override void InitializeResolver()
    {
        Resolver = new FenceTransportResolver();
    }

    protected override void InitializeFirstSnapshotCreator(FenceTransportInputData inputData)
    {
        FirstSnapshotCreator = new FenceTransportFirstSnapshotCreator(inputData);
    }

}