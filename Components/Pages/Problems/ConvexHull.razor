@page "/convex_hull";
@using Problem.ConvexHull;
@using Problem.CarrierAssignment;
@inherits ProblemComponentBase<FenceTransportInputData, ConvexHullOutput, Drawer.GraphDrawer.GraphData>

<div class="map-background">
    @if (Executor is not null)
    {
      <GraphVisualizer Snapshots="Executor.GetSnapshots()"/>
      <ReturnButton/>
      <OutputButton ButtonPosition="HangingButton.HangingButtonPosition.Right" ButtonProblem="OutputButton.OutputButtonProblem.ConvexHull"/>
    }
</div>


@code {

    protected override void InitializeResolver()
    {
        Resolver = new ConvexHullResolver();
    }

    protected override void InitializeFirstSnapshotCreator(FenceTransportInputData inputData)
    {
        FirstSnapshotCreator = new ConvexHullFirstSnapshotCreator(inputData);
    }

}