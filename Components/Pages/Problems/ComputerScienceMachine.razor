@page "/computer_science_machine"

@using Plaszczakowo.Problems.PhraseCorrection
@using Plaszczakowo.Problems.PhraseCorrection.Input
@inherits ProblemComponentBase<PhraseCorrectionInputData, Plaszczakowo.Problems.PhraseCorrection.Output.PhraseCorrectionOutput, Plaszczakowo.Drawer.TextReplaceDrawer.TextReplaceData>

<div class="wall-background">
    @if (Executor is not null)
    {
        <TextReplaceVisualizer Snapshots="Executor.GetSnapshots()"/>
        <ReturnButton/>
        <OutputButton ButtonPosition="HangingButton.HangingButtonPosition.Right" ButtonProblem="OutputButton.OutputButtonProblem.PhraseCorrection"/>
    }
</div>

@code {

    protected override void InitializeResolver()
    {
        Resolver = new PhraseCorrectionResolver();
    }

    protected override void InitializeFirstSnapshotCreator(PhraseCorrectionInputData inputData)
    {
        FirstSnapshotCreator = new FirstPhraseCorrectionSnapshotCreator(inputData);
    }

}