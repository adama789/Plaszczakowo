<div class="input_choice" @onclick="OnChoice">
    <img src="authors/AdamCedro.png"/>
    <h3>
        @Title
    </h3>
    <p>
        @Description
    </p>
</div>

@code {
    [Parameter] public required string Title { get; set; }

    [Parameter] public required string Description { get; set; }

    [Parameter] public required EventCallback<MouseEventArgs> OnChoice { get; set; }
}