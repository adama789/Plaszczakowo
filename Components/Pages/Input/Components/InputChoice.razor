@inject NavigationManager Navigator;

<div class="input_choice" @onclick="OnClick">
    <img src="@GetPlateSrc()" alt="@Title" draggable="false"/>
    <h3>
        @Title
    </h3>
    <p>
        @Description
    </p>
</div>

@code {
    [Parameter] public required string Title { get; set; }

    [Parameter] public required string Description { get; set; }

    [Parameter] public required string Href { get; set; }

    [Parameter] public string? InputChoiceImg { get; set; }

    private void OnClick()
    {
        Navigator.NavigateTo(Href);
    }

    public string GetPlateSrc() => InputChoiceImg ?? "img/buttons/plate.png";
}