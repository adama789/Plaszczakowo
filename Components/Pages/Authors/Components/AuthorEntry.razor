<div class="authors__entry">
    <div class="authors__entry__image">
        <img src="@ImgSrc" alt="@Name"/>
    </div>
    <div class="authors__entry__name">
        @Name
    </div>
</div>

@code {

    [Parameter] public string? Name { get; set; }

    [Parameter] public string? ImgSrc { get; set; }
}