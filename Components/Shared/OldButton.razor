<div class="@GetHtmlClass()" style="width: @GetButtonWidth()" @onclick="onclick">
    @ChildContent
</div>

@code {

    [Parameter] public required RenderFragment ChildContent { get; set; }

    [Parameter] public required EventCallback<MouseEventArgs> onclick { get; set; }

    [Parameter] public bool? Disabled { get; set; }

    [Parameter] public int? Width { get; set; }

    private string GetHtmlClass()
    {
        return "old_button " + (Disabled ?? false ? "old_button--disabled" : "");
    }

    private string GetButtonWidth()
    {
        return $"{Width ?? 10}rem";
    }

}