@using System.ComponentModel
@inherits HangingButton
@inject NavigationManager Navigation;

@{
    base.BuildRenderTree(__builder);
}

@code {
    public enum OutputButtonProblem
    {
        [Description("guard_schedule_output")]
        GuardSchedule,

        [Description("fence_transport_output")]
        FenceTransport,

        [Description("computer_science_machine_output")]
        ComputerMachine,

        [Description("phrase_correction_output")]
        PhraseCorrection,
        [Description("huffman_coding_output")]
        HuffmanCoding
    }

    [Parameter] public OutputButtonProblem ButtonProblem { get; set; }
    
    protected override void OnHangingButtonClick()
    {
        var problem = ButtonProblem.GetDescription();
        Navigation.NavigateTo(problem);
    }

    protected override string GetButtonContent() => "Wynik";
}
